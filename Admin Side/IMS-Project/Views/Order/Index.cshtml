@model IEnumerable<IMS_Project.Models.Order>

@{
    ViewBag.Title = "Order";
    
}

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DIspatched)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DispatchedDate)
        </th>
        <th>
            Finished
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeliveryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.CustomerID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDate)
    </td>
    <td>
        @if (item.CancelOrder == true)
        {
            <label style="color: red;">⠀⠀⠀✖</label>
        }
        else
        {
                        if(item.DIspatched == true)
                    {
                        <label style="color:green;">⠀⠀⠀✔</label>
                    }
                    else
                    {
                        <label>⠀⠀⠀⌛</label>
                    }
            //@Html.DisplayFor(modelItem => item.DIspatched)
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DispatchedDate)
    </td>
    <td>
        @if (item.CancelOrder == true)
        {
            <label style="color: red;">⠀⠀⠀✖</label>
        }
        else
        {
            if(item.Deliver == true)
                    {
                        <label style="color:green;">⠀⠀⠀✔</label>
            }
            else if(item.DIspatched == true && item.Deliver == false)
                        {
                            <label>⠀⠀⠀⌛</label>
                        }
            else
            {
                        <label style="color: red;">⠀⠀⠀-</label>
                    }
            //@Html.DisplayFor(modelItem => item.Deliver)
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DeliveryDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TotalAmount) $
    </td>

    <td>
                            @if(Session["username"] == null)
                    {
                        <script>
                            window.location.href = '@Url.Action("SessionExpired", "admin_Login")';
                        </script>
                    }
        @Html.ActionLink("View Details", "Details", new { id = item.OrderID })

    </td>
</tr>
}

</table>
