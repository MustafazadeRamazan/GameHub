
@{
    ViewBag.Title = "Login";
}

<!-- Cart view section -->
<section id="aa-myaccount">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-myaccount-area">
                    <div class="row">
                    @if (TempData["AlertMessageErrorLogin"] != null)
                    {
                     <div class="alert alert-danger alert-dismissible fade in" role="alert">
                         <strong>@TempData["AlertMessageErrorLogin"].ToString()</strong>
                         <script>
                             window.setTimeout(function () {
                                 $(".alert-danger").fadeTo(500, 0).slideUp(500, function () {
                                     $(this).remove();
                                 });
                             }, 2000);
                         </script>
                     </div>
                     }
                        <div class="col-md-6">
                            <div class="aa-myaccount-login">
                                <h4>Login</h4>
                               
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">Username<span>*</span></label>
                                    <input name="UserName" type="text" required placeholder="Username" maxlength="20">
                                    <label for="">Password<span>*</span></label>
                                    <input name="Password" type="password" required placeholder="Password" maxlength="20">
                                    <button type="submit" class="aa-browse-btn">Login</button>
                                    <p class="aa-lost-password"><a href="#">Lost your password?</a></p>
                            }
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="aa-myaccount-register">
                                <h4>Register</h4>

                                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "aa-login-form" }))
                                {
                                    <label for="">First Name<span>*</span></label>
                                    <input required name="First_Name" type="text" placeholder="Enter first name" maxlength="20">

                                    <label for="">Last Name<span>*</span></label>
                                    <input required name="Last_Name" type="text" placeholder="Enter last name" maxlength="20">

                                    <label for="">Username<span>*</span></label>
                                    <input required name="UserName" type="text" placeholder="Username" maxlength="20">

                                    <label for="">Age<span>*</span></label>
                                    <input required min="13" name="Age" type="number" placeholder="Age" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="2">

                                    <label for="">Email<span>*</span></label>
                                    <input name="Email" type="email" required placeholder="Enter your email" maxlength="30">

                                    <label for="">Password<span>*</span></label>
                                    <input required name="Password" type="password" placeholder="Password" maxlength="20">

                                    <label for="">Mobile<span>*</span></label>
                                    <input required min="0" name="Mobile1" type="number" placeholder="Mobile" oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" maxlength="15">
                                                                        
                                    <label for="">Country<span>*</span></label>
                                    <input required name="Country" type="text" placeholder="Country" maxlength="20">

                                    <button type="submit" class="aa-browse-btn">Register</button>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / Cart view section -->
